<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="jukebox" class="com.blogspot.symfonyworld.lyricsbase.ArrayListJukebox">
        <property name="name">
            <value>Metal Jukebox</value>
        </property>
    </bean>

    <bean id="songsController" class="com.blogspot.symfonyworld.lyricsbase.SongsController">
        <property name="facade"><ref bean="jukebox" /></property>
    </bean>
    
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/jukebox.song">songsController</prop>
            </props>
        </property>
    </bean>
        
</beans>
